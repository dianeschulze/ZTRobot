	<p id = "demo"> ARROW KEYS </p>
	<script language = 'JavaScript'>
	function rightButton(){
		document.getElementById("demo").innerHTML = "right button";
	}
	function leftButton(){
		document.getElementById("demo").innerHTML = "left button";
	}
	function downButton(){
		document.getElementById("demo").innerHTML = "down button";
	}

	document.onkeydown = function checkKey(e){
		e = e || window.event;
		if (e.keyCode == '38'){
			//up arrow
			document.getElementById("demo").innerHTML = "up key";
		}
		else if (e.keyCode == '40'){
			//down arrow
			document.getElementById("demo").innerHTML = "down key";		}
		else if (e.keyCode == '39'){
			//right arrow
			document.getElementById("demo").innerHTML = "right key";
		}
		else if (e.keyCode == '37'){
			//left arrow
			document.getElementById("demo").innerHTML = "left key";
		}
	}
		</script>


